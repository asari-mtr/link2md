{
  "name" : "link2md",
  "version": "0.1",
  "description": "Copy all the links included in the selected text as markdown format text to clipbord.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
      "contextMenus",
      "clipboardWrite",
      "tabs",
      "http://*/*",
      "https://*/*"],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Copy link as markdown",
    "default_icon": {
        "16": "images/icon16.png",
        "24": "images/icon24.png",
        "32": "images/icon32.png"
    }
  },
  "manifest_version": 2
}
